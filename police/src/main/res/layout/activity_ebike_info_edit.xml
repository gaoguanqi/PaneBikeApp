<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="ResourceName">

    <data>

        <import type="android.view.View" />

        <variable
            name="viewModel"
            type="net.hyntech.police.vm.RegisterEditViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/common_default_background"
        android:orientation="vertical">

        <include layout="@layout/include_title" />

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/common_color_background"
                android:orientation="vertical"
                android:paddingStart="@dimen/common_padding"
                android:paddingTop="6dp"
                android:paddingEnd="@dimen/common_padding"
                android:paddingBottom="@dimen/common_padding">


                <LinearLayout
                    android:id="@+id/ll_ebike_no"
                    android:layout_width="match_parent"
                    android:layout_height="46dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="车牌号"
                        android:textColor="@color/common_gray_text"
                        android:textSize="@dimen/common_font_text" />


                    <TextView
                        android:id="@+id/tv_ebike_no"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2.5"
                        android:gravity="center_vertical"
                        android:textColor="@color/common_black"
                        android:textSize="@dimen/common_font_text"
                        tools:text="车牌号" />

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:src="@drawable/ic_no_down" />
                </LinearLayout>

                <View style="@style/common_style_line" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="46dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">


                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="标签号"
                        android:textColor="@color/common_gray_text"
                        android:textSize="@dimen/common_font_text" />


                    <net.hyntech.common.widget.view.ClearEditText
                        android:id="@+id/et_label_no"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="3"
                        android:background="@null"
                        android:hint="请输入标签号"
                        android:textColor="@color/common_black"
                        android:textSize="@dimen/common_font_text" />
                </LinearLayout>

                <View style="@style/common_style_line" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="46dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">


                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="车架号"
                        android:textColor="@color/common_gray_text"
                        android:textSize="@dimen/common_font_text" />


                    <net.hyntech.common.widget.view.ClearEditText
                        android:id="@+id/et_frame_no"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="3"
                        android:background="@null"
                        android:hint="请输入车架号"
                        android:textColor="@color/common_black"
                        android:textSize="@dimen/common_font_text" />
                </LinearLayout>

                <View style="@style/common_style_line" />

                <LinearLayout
                    android:id="@+id/ll_brand"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:minHeight="46dp"
                    android:orientation="horizontal">


                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="品牌型号"
                        android:textColor="@color/common_gray_text"
                        android:textSize="@dimen/common_font_text" />


                    <TextView
                        android:id="@+id/tv_brand"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2.5"
                        android:hint="请选择品牌型号"
                        android:textColor="@color/common_black"
                        android:textSize="@dimen/common_font_text" />

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:src="@drawable/ic_next_24dp" />
                </LinearLayout>

                <View style="@style/common_style_line" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="46dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="电机号"
                        android:textColor="@color/common_gray_text"
                        android:textSize="@dimen/common_font_text" />


                    <net.hyntech.common.widget.view.ClearEditText
                        android:id="@+id/et_engine_no"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="3"
                        android:background="@null"
                        android:hint="请输入电机号"
                        android:textColor="@color/common_black"
                        android:textSize="@dimen/common_font_text" />
                </LinearLayout>

                <View style="@style/common_style_line" />


                <LinearLayout
                    android:id="@+id/ll_color"
                    android:layout_width="match_parent"
                    android:layout_height="46dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="车辆颜色"
                        android:textColor="@color/common_gray_text"
                        android:textSize="@dimen/common_font_text" />


                    <TextView
                        android:id="@+id/tv_color"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2.5"
                        android:gravity="center_vertical"
                        android:textColor="@color/common_black"
                        android:textSize="@dimen/common_font_text"
                        tools:text="车辆颜色" />

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:src="@drawable/ic_no_down" />
                </LinearLayout>

                <View style="@style/common_style_line" />

                <LinearLayout
                    android:id="@+id/ll_ebike_type"
                    android:layout_width="match_parent"
                    android:layout_height="46dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="车辆类型"
                        android:textColor="@color/common_gray_text"
                        android:textSize="@dimen/common_font_text" />


                    <TextView
                        android:id="@+id/tv_ebike_type"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2.5"
                        android:gravity="center_vertical"
                        android:textColor="@color/common_black"
                        android:textSize="@dimen/common_font_text"
                        tools:text="车辆类型" />

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:src="@drawable/ic_no_down" />
                </LinearLayout>

                <View style="@style/common_style_line" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="46dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">


                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="购买价格(元)"
                        android:textColor="@color/common_gray_text"
                        android:textSize="@dimen/common_font_text" />


                    <net.hyntech.common.widget.view.ClearEditText
                        android:id="@+id/et_buy_price"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="3"
                        android:background="@null"
                        android:hint="请输入购买价格"
                        android:inputType="number"
                        android:maxLength="6"
                        android:textColor="@color/common_black"
                        android:textSize="@dimen/common_font_text" />
                </LinearLayout>

                <View style="@style/common_style_line" />

                <LinearLayout
                    android:id="@+id/ll_buy_time"
                    android:layout_width="match_parent"
                    android:layout_height="46dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="购买日期"
                        android:textColor="@color/common_gray_text"
                        android:textSize="@dimen/common_font_text" />


                    <TextView
                        android:id="@+id/tv_buy_time"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2.5"
                        android:gravity="center_vertical"
                        android:textColor="@color/common_black"
                        android:textSize="@dimen/common_font_text"
                        tools:text="购买日期" />

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:src="@drawable/ic_no_down" />
                </LinearLayout>

                <View style="@style/common_style_line" />

                <LinearLayout
                    android:id="@+id/ll_service"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:minHeight="46dp"
                    android:orientation="horizontal"
                    android:paddingTop="6dp"
                    android:paddingBottom="6dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="保障服务"
                        android:textColor="@color/common_gray_text"
                        android:textSize="@dimen/common_font_text" />


                    <TextView
                        android:id="@+id/tv_service"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2.5"
                        android:gravity="center_vertical"
                        android:textColor="@color/common_black"
                        android:textSize="@dimen/common_font_text"
                        tools:text="保障服务" />

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:src="@drawable/ic_no_down" />
                </LinearLayout>

                <View style="@style/common_style_line" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingEnd="@dimen/common_padding">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="46dp"
                        android:layout_gravity="top"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="备注"
                        android:textColor="@color/common_gray_text"
                        android:textSize="@dimen/common_font_text" />

                    <net.hyntech.common.widget.view.ClearEditText
                        android:id="@+id/et_remark"
                        android:layout_width="0dp"
                        android:layout_height="80dp"
                        android:layout_marginTop="10dp"
                        android:layout_weight="3"
                        android:background="@drawable/shape_remark"
                        android:gravity="top"
                        android:hint="请输入备注（50个字以内）"
                        android:maxLength="50"
                        android:padding="8dp"
                        android:textColor="@color/common_black"
                        android:textSize="@dimen/common_font_text" />
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="46dp"
                    android:gravity="center_vertical"
                    android:text="车辆照片"
                    android:textColor="@color/common_gray_text"
                    android:textSize="@dimen/common_font_text" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/iv_ebike_a"
                            android:layout_width="120dp"
                            android:layout_height="90dp"
                            android:background="@drawable/pic_add"
                            android:scaleType="centerCrop" />
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/iv_ebike_b"
                            android:layout_width="120dp"
                            android:layout_height="90dp"
                            android:background="@drawable/pic_add"
                            android:scaleType="centerCrop" />
                    </LinearLayout>
                </LinearLayout>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="46dp"
                    android:gravity="center_vertical"
                    android:text="标签安装位置照片"
                    android:textColor="@color/common_gray_text"
                    android:textSize="@dimen/common_font_text" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/iv_label_loc"
                        android:layout_width="120dp"
                        android:layout_height="90dp"
                        android:background="@drawable/pic_add"
                        android:scaleType="centerCrop" />
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="46dp"
                    android:gravity="center_vertical"
                    android:text="购车发票/其他凭证"
                    android:textColor="@color/common_gray_text"
                    android:textSize="@dimen/common_font_text" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/iv_invoice"
                        android:layout_width="120dp"
                        android:layout_height="90dp"
                        android:background="@drawable/pic_add"
                        android:scaleType="centerCrop" />
                </LinearLayout>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>

        <Button
            android:id="@+id/btn_save"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="6dp"
            android:layout_marginEnd="12dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/selector_common"
            android:text="@string/common_text_save"
            android:textColor="@color/common_white"
            android:textSize="@dimen/common_font_common" />
    </LinearLayout>
</layout>