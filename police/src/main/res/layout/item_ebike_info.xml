<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/item_root"
    tools:ignore="ResourceName">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:background="@color/common_default_background"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingStart="16dp"
        android:paddingEnd="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="车辆信息"
            android:textColor="@color/common_gray_text"
            android:textSize="@dimen/common_font_text" />

        <TextView
            android:id="@+id/tv_edit_ebike"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="end"
            android:text="编辑"
            android:textColor="@color/common_color_text"
            android:textSize="@dimen/common_font_text" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingStart="16dp"
        android:paddingEnd="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="车牌号"
            android:textColor="@color/common_gray_text"
            android:textSize="@dimen/common_font_text" />

        <TextView
            android:id="@+id/tv_ebike_no"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="end"
            android:textColor="@color/common_black"
            android:textSize="@dimen/common_font_text"
            tools:text="车牌号" />
    </LinearLayout>

    <View
        style="@style/common_style_line"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingStart="16dp"
        android:paddingEnd="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="标签号"
            android:textColor="@color/common_gray_text"
            android:textSize="@dimen/common_font_text" />

        <TextView
            android:id="@+id/tv_label_no"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="end"
            android:textColor="@color/common_black"
            android:textSize="@dimen/common_font_text"
            tools:text="标签号" />
    </LinearLayout>

    <View
        style="@style/common_style_line"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingStart="16dp"
        android:paddingEnd="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="车架号"
            android:textColor="@color/common_gray_text"
            android:textSize="@dimen/common_font_text" />

        <TextView
            android:id="@+id/tv_frame_no"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="end"
            android:textColor="@color/common_black"
            android:textSize="@dimen/common_font_text"
            tools:text="车架号" />
    </LinearLayout>

    <View
        style="@style/common_style_line"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingStart="16dp"
        android:paddingEnd="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="品牌型号"
            android:textColor="@color/common_gray_text"
            android:textSize="@dimen/common_font_text" />

        <TextView
            android:id="@+id/tv_brand"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="end"
            android:textColor="@color/common_black"
            android:textSize="@dimen/common_font_text"
            tools:text="品牌型号" />
    </LinearLayout>

    <View
        style="@style/common_style_line"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingStart="16dp"
        android:paddingEnd="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="电机号"
            android:textColor="@color/common_gray_text"
            android:textSize="@dimen/common_font_text" />

        <TextView
            android:id="@+id/tv_engine"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="end"
            android:textColor="@color/common_black"
            android:textSize="@dimen/common_font_text"
            tools:text="电机号" />
    </LinearLayout>

    <View
        style="@style/common_style_line"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingStart="16dp"
        android:paddingEnd="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="车辆颜色"
            android:textColor="@color/common_gray_text"
            android:textSize="@dimen/common_font_text" />

        <TextView
            android:id="@+id/tv_color"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="end"
            android:textColor="@color/common_black"
            android:textSize="@dimen/common_font_text"
            tools:text="车辆颜色" />
    </LinearLayout>

    <View
        style="@style/common_style_line"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingStart="16dp"
        android:paddingEnd="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="车辆类型"
            android:textColor="@color/common_gray_text"
            android:textSize="@dimen/common_font_text" />

        <TextView
            android:id="@+id/tv_ebike_type"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="end"
            android:textColor="@color/common_black"
            android:textSize="@dimen/common_font_text"
            tools:text="车辆类型" />
    </LinearLayout>

    <View
        style="@style/common_style_line"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingStart="16dp"
        android:paddingEnd="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="购买价格/元"
            android:textColor="@color/common_gray_text"
            android:textSize="@dimen/common_font_text" />

        <TextView
            android:id="@+id/tv_buy_price"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="end"
            android:textColor="@color/common_black"
            android:textSize="@dimen/common_font_text"
            tools:text="购买价格/元" />
    </LinearLayout>

    <View
        style="@style/common_style_line"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingStart="16dp"
        android:paddingEnd="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="购买日期"
            android:textColor="@color/common_gray_text"
            android:textSize="@dimen/common_font_text" />

        <TextView
            android:id="@+id/tv_buy_time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="end"
            android:textColor="@color/common_black"
            android:textSize="@dimen/common_font_text"
            tools:text="购买日期" />
    </LinearLayout>

    <View
        style="@style/common_style_line"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:minHeight="46dp"
        android:orientation="horizontal"
        android:paddingStart="16dp"
        android:paddingEnd="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="保障服务"
            android:textColor="@color/common_gray_text"
            android:textSize="@dimen/common_font_text" />

        <TextView
            android:id="@+id/tv_service"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ellipsize="end"
            android:gravity="end"
            android:maxLines="2"
            android:textColor="@color/common_black"
            android:textSize="@dimen/common_font_text"
            tools:text="保障服务" />
    </LinearLayout>

    <View
        style="@style/common_style_line"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="16dp"
        android:paddingTop="12dp"
        android:paddingBottom="8dp"
        android:text="车辆照片"
        android:textColor="@color/common_black"
        android:textSize="@dimen/common_font_text" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingStart="16dp"
        android:paddingEnd="16dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_ebike_a"
                android:layout_width="120dp"
                android:layout_height="90dp"
                android:scaleType="centerCrop" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_ebike_b"
                android:layout_width="120dp"
                android:layout_height="90dp"
                android:scaleType="centerCrop" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="16dp"
        android:paddingTop="12dp"
        android:paddingBottom="8dp"
        android:text="标签安装位置照片"
        android:textColor="@color/common_black"
        android:textSize="@dimen/common_font_text" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="16dp">

        <ImageView
            android:id="@+id/iv_label_loc"
            android:layout_width="120dp"
            android:layout_height="90dp"
            android:scaleType="centerCrop" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="16dp"
        android:paddingTop="12dp"
        android:paddingBottom="8dp"
        android:text="购车发票/其他凭证"
        android:textColor="@color/common_black"
        android:textSize="@dimen/common_font_text" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="16dp">

        <ImageView
            android:id="@+id/iv_invoice"
            android:layout_width="120dp"
            android:layout_height="90dp"
            android:scaleType="centerCrop" />
    </LinearLayout>
</LinearLayout>