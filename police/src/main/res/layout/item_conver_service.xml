<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="16dp"
    android:layout_marginTop="8dp"
    android:layout_marginEnd="16dp"
    android:layout_marginBottom="8dp"
    app:cardBackgroundColor="@color/common_white"
    app:cardCornerRadius="4dp"
    app:cardElevation="2dp"
    tools:ignore="ResourceName">

    <LinearLayout
        android:id="@+id/item_root"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="10dp"
        android:paddingTop="@dimen/common_padding">


        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawablePadding="8dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:gravity="center_vertical"
            android:textColor="@color/common_color_text"
            android:textSize="@dimen/common_font_text"
            app:drawableStartCompat="@drawable/ic_shop"
            tools:text="测试文本" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginStart="@dimen/common_padding"
            android:layout_marginEnd="@dimen/common_padding"
            android:background="@drawable/shape_dashgap"
            android:layerType="software" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingStart="@dimen/common_padding"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:paddingEnd="@dimen/common_padding">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingEnd="20dp"
                android:text="服务类型"
                android:textColor="@color/common_gray_text"
                android:textSize="@dimen/common_font_text" />

            <TextView
                android:id="@+id/tv_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="@color/common_black"
                android:textSize="@dimen/common_font_text"
                tools:text="服务类型" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingStart="@dimen/common_padding"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:paddingEnd="@dimen/common_padding">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingEnd="20dp"
                android:text="网点地址"
                android:textColor="@color/common_gray_text"
                android:textSize="@dimen/common_font_text" />

            <TextView
                android:id="@+id/tv_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:ellipsize="middle"
                android:textColor="@color/common_black"
                android:textSize="@dimen/common_font_text"
                tools:text="网点地址" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingStart="@dimen/common_padding"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:paddingEnd="@dimen/common_padding">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingEnd="20dp"
                android:text="联系电话"
                android:textColor="@color/common_gray_text"
                android:textSize="@dimen/common_font_text" />

            <TextView
                android:id="@+id/tv_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/common_black"
                android:textSize="@dimen/common_font_text"
                tools:text="联系电话" />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginStart="@dimen/common_padding"
            android:layout_marginEnd="@dimen/common_padding"
            android:background="@drawable/shape_dashgap"
            android:layerType="software" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:paddingStart="@dimen/common_padding"
            android:paddingEnd="@dimen/common_padding"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                tools:text="姓名"
                android:layout_gravity="center"
                android:textColor="@color/common_color_text"
                android:textSize="@dimen/common_font_text"
                android:drawablePadding="4dp"
                app:drawableStartCompat="@drawable/ic_upload" />

            <TextView
                android:id="@+id/tv_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/selector_cancel"
                android:paddingStart="28dp"
                android:paddingTop="6dp"
                android:paddingEnd="28dp"
                android:paddingBottom="6dp"
                android:layout_marginEnd="10dp"
                android:layout_gravity="center"
                android:text="删除"
                android:textColor="@color/common_colorTheme"
                android:textSize="@dimen/common_font_common" />

            <TextView
                android:id="@+id/tv_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/selector_confirm"
                android:paddingStart="28dp"
                android:paddingTop="6dp"
                android:paddingEnd="28dp"
                android:paddingBottom="6dp"
                android:layout_gravity="center"
                android:layout_marginStart="10dp"
                android:text="编辑"
                android:textColor="@color/common_white"
                android:textSize="@dimen/common_font_common" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
