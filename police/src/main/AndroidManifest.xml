<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="net.hyntech.police">

    <!-- Required -->
    <permission
        android:name="${applicationId}.permission.JPUSH_MESSAGE"
        android:protectionLevel="signature" />
    <permission
        android:name="${applicationId}.permission.MIPUSH_RECEIVE"
        android:protectionLevel="signature" />
    <!-- Required  一些系统要求的权限，如访问网络等-->
    <uses-permission android:name="${applicationId}.permission.MIPUSH_RECEIVE" />
    <uses-permission android:name="${applicationId}.permission.JPUSH_MESSAGE" />
    <uses-permission android:name="com.coloros.mcs.permission.RECIEVE_MCS_MESSAGE" />
    <!--since 3.4.0 oppo need-->
    <uses-permission android:name="com.heytap.mcs.permission.RECIEVE_MCS_MESSAGE" />
    <!--华为角标-->
    <uses-permission android:name="com.huawei.android.launcher.permission.CHANGE_BADGE " />

    <application
        android:name="net.hyntech.police.app.PoliceApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_police"
        android:label="@string/police_app_name"
        android:roundIcon="@mipmap/ic_launcher_police"
        android:supportsRtl="true"
        android:theme="@style/common_NoTitleBarTheme">
        <activity android:name="net.hyntech.police.ui.activity.SplashActivity"
            android:theme="@style/common_SplashTheme"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="com.baidu.lbsapi.API_KEY"
            android:value="YsEbQ9bdwT9DCwbRuuKI32VfmAmARWn7" />


        <activity android:name=".ui.activity.HomeActivity"
            android:screenOrientation="portrait" />

        <activity android:name=".ui.activity.DeviceInfoActivity"
            android:screenOrientation="portrait" />

        <activity android:name=".ui.activity.FindEbikeActivity"
            android:screenOrientation="portrait" />

        <activity android:name=".ui.activity.PointManageActivity"
            android:screenOrientation="portrait" />

        <activity android:name=".ui.activity.SearchPointActivity"
            android:screenOrientation="portrait" />
        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="${applicationId}.fileProvider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>
    </application>

</manifest>