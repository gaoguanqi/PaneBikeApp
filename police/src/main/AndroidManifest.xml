<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="net.hyntech.police">

    <application
        android:name="net.hyntech.police.app.PoliceApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_police"
        android:label="@string/police_app_name"
        android:roundIcon="@mipmap/ic_launcher_police"
        android:supportsRtl="true"
        android:theme="@style/common_NoTitleBarTheme">
        <activity android:name="net.hyntech.police.ui.activity.SplashActivity"
            android:theme="@style/common_SplashTheme"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".ui.activity.HomeActivity"
            android:screenOrientation="portrait" />



    </application>

</manifest>