<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="ResourceName">

    <data>

        <import type="android.view.View" />

        <variable
            name="viewModel"
            type="net.hyntech.usual.vm.AddValViewModel" />
    </data>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/common_color_background"
        android:orientation="vertical">

        <include layout="@layout/include_title" />

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="42dp"
                    android:background="@color/common_default_background"
                    android:gravity="center_vertical"
                    android:paddingStart="@dimen/common_padding"
                    android:paddingEnd="@dimen/common_padding"
                    android:text="车辆信息"
                    android:textColor="@color/common_gray_text"
                    android:textSize="@dimen/common_font_text" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="46dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingStart="@dimen/common_padding"
                    android:paddingEnd="@dimen/common_padding">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingEnd="@dimen/common_padding"
                        android:text="@string/common_ebike_no_t3"
                        android:textColor="@color/common_gray_text"
                        android:textSize="@dimen/common_font_text" />

                    <TextView
                        android:id="@+id/tv_ebike_no"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/common_black"
                        android:textSize="@dimen/common_font_text"
                        tools:text="车牌号" />

                </LinearLayout>

                <View
                    style="@style/common_style_line"
                    android:layout_marginStart="@dimen/common_padding"
                    android:layout_marginEnd="@dimen/common_padding" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="46dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingStart="@dimen/common_padding"
                    android:paddingEnd="@dimen/common_padding">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingEnd="@dimen/common_padding"
                        android:text="@string/common_label_no_t3"
                        android:textColor="@color/common_gray_text"
                        android:textSize="@dimen/common_font_text" />

                    <TextView
                        android:id="@+id/tv_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/common_black"
                        android:textSize="@dimen/common_font_text"
                        tools:text="标签号" />

                </LinearLayout>

                <View
                    style="@style/common_style_line"
                    android:layout_marginStart="@dimen/common_padding"
                    android:layout_marginEnd="@dimen/common_padding" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="46dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingStart="@dimen/common_padding"
                    android:paddingEnd="@dimen/common_padding">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingEnd="@dimen/common_padding"
                        android:text="@string/common_ebike_name_t2"
                        android:textColor="@color/common_gray_text"
                        android:textSize="@dimen/common_font_text" />

                    <TextView
                        android:id="@+id/tv_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/common_black"
                        android:textSize="@dimen/common_font_text"
                        tools:text="车主姓名" />

                </LinearLayout>

                <View
                    style="@style/common_style_line"
                    android:layout_marginStart="@dimen/common_padding"
                    android:layout_marginEnd="@dimen/common_padding" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="46dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingStart="@dimen/common_padding"
                    android:paddingEnd="@dimen/common_padding">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingEnd="@dimen/common_padding"
                        android:text="@string/common_ebike_phone_t1"
                        android:textColor="@color/common_gray_text"
                        android:textSize="@dimen/common_font_text" />

                    <TextView
                        android:id="@+id/tv_phone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/common_black"
                        android:textSize="@dimen/common_font_text"
                        tools:text="车主手机号" />

                </LinearLayout>

                <View
                    style="@style/common_style_line"
                    android:layout_marginStart="@dimen/common_padding"
                    android:layout_marginEnd="@dimen/common_padding" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="46dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingStart="@dimen/common_padding"
                    android:paddingEnd="@dimen/common_padding">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingEnd="@dimen/common_padding"
                        android:text="车主身份证号"
                        android:textColor="@color/common_gray_text"
                        android:textSize="@dimen/common_font_text" />

                    <TextView
                        android:id="@+id/tv_idcard"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/common_black"
                        android:textSize="@dimen/common_font_text"
                        tools:text="车主身份证号" />

                </LinearLayout>

                <View
                    style="@style/common_style_line"
                    android:layout_marginStart="@dimen/common_padding"
                    android:layout_marginEnd="@dimen/common_padding" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="46dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingStart="@dimen/common_padding"
                    android:paddingEnd="@dimen/common_padding">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingEnd="@dimen/common_padding"
                        android:text="@string/common_frame_no_t1"
                        android:textColor="@color/common_gray_text"
                        android:textSize="@dimen/common_font_text" />

                    <TextView
                        android:id="@+id/tv_frame_no"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/common_black"
                        android:textSize="@dimen/common_font_text"
                        tools:text="车架号" />

                </LinearLayout>

                <View
                    style="@style/common_style_line"
                    android:layout_marginStart="@dimen/common_padding"
                    android:layout_marginEnd="@dimen/common_padding" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="46dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingStart="@dimen/common_padding"
                    android:paddingEnd="@dimen/common_padding">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingEnd="@dimen/common_padding"
                        android:text="@string/common_brand_t2"
                        android:textColor="@color/common_gray_text"
                        android:textSize="@dimen/common_font_text" />

                    <TextView
                        android:id="@+id/tv_brand"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/common_black"
                        android:textSize="@dimen/common_font_text"
                        tools:text="品牌型号" />

                </LinearLayout>

                <View
                    style="@style/common_style_line"
                    android:layout_marginStart="@dimen/common_padding"
                    android:layout_marginEnd="@dimen/common_padding" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="46dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingStart="@dimen/common_padding"
                    android:paddingEnd="@dimen/common_padding">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingEnd="@dimen/common_padding"
                        android:text="@string/common_motor_t3"
                        android:textColor="@color/common_gray_text"
                        android:textSize="@dimen/common_font_text" />

                    <TextView
                        android:id="@+id/tv_motor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/common_black"
                        android:textSize="@dimen/common_font_text"
                        tools:text="电机号" />

                </LinearLayout>

                <View
                    style="@style/common_style_line"
                    android:layout_marginStart="@dimen/common_padding"
                    android:layout_marginEnd="@dimen/common_padding" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="46dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingStart="@dimen/common_padding"
                    android:paddingEnd="@dimen/common_padding">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingEnd="@dimen/common_padding"
                        android:text="@string/common_color_t2"
                        android:textColor="@color/common_gray_text"
                        android:textSize="@dimen/common_font_text" />

                    <TextView
                        android:id="@+id/tv_color"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/common_black"
                        android:textSize="@dimen/common_font_text"
                        tools:text="车辆颜色" />

                </LinearLayout>

                <View
                    style="@style/common_style_line"
                    android:layout_marginStart="@dimen/common_padding"
                    android:layout_marginEnd="@dimen/common_padding" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="46dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingStart="@dimen/common_padding"
                    android:paddingEnd="@dimen/common_padding">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingEnd="@dimen/common_padding"
                        android:text="@string/common_type_t2"
                        android:textColor="@color/common_gray_text"
                        android:textSize="@dimen/common_font_text" />

                    <TextView
                        android:id="@+id/tv_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/common_black"
                        android:textSize="@dimen/common_font_text"
                        tools:text="车辆类型" />

                </LinearLayout>

                <View
                    style="@style/common_style_line"
                    android:layout_marginStart="@dimen/common_padding"
                    android:layout_marginEnd="@dimen/common_padding" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="46dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingStart="@dimen/common_padding"
                    android:paddingEnd="@dimen/common_padding">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingEnd="@dimen/common_padding"
                        android:text="@string/common_buy_price_t0"
                        android:textColor="@color/common_gray_text"
                        android:textSize="@dimen/common_font_text" />

                    <TextView
                        android:id="@+id/tv_buy_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/common_black"
                        android:textSize="@dimen/common_font_text"
                        tools:text="购买价格/元" />

                </LinearLayout>

                <View
                    style="@style/common_style_line"
                    android:layout_marginStart="@dimen/common_padding"
                    android:layout_marginEnd="@dimen/common_padding" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="46dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingStart="@dimen/common_padding"
                    android:paddingEnd="@dimen/common_padding">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingEnd="@dimen/common_padding"
                        android:text="@string/common_buy_time_t2"
                        android:textColor="@color/common_gray_text"
                        android:textSize="@dimen/common_font_text" />

                    <TextView
                        android:id="@+id/tv_buy_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/common_black"
                        android:textSize="@dimen/common_font_text"
                        tools:text="购买时间" />

                </LinearLayout>

                <View
                    style="@style/common_style_line"
                    android:layout_marginStart="@dimen/common_padding"
                    android:layout_marginEnd="@dimen/common_padding" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="46dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingStart="@dimen/common_padding"
                    android:paddingEnd="@dimen/common_padding">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingEnd="@dimen/common_padding"
                        android:text="@string/common_remark_t4"
                        android:textColor="@color/common_gray_text"
                        android:textSize="@dimen/common_font_text" />

                    <TextView
                        android:id="@+id/tv_remark"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:textColor="@color/common_black"
                        android:textSize="@dimen/common_font_text"
                        tools:text="备注" />

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="42dp"
                    android:background="@color/common_default_background"
                    android:gravity="center_vertical"
                    android:paddingStart="@dimen/common_padding"
                    android:paddingEnd="@dimen/common_padding"
                    android:text="服务信息"
                    android:textColor="@color/common_gray_text"
                    android:textSize="@dimen/common_font_text" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="46dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingStart="@dimen/common_padding"
                    android:paddingEnd="@dimen/common_padding">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingEnd="@dimen/common_padding"
                        android:text="@string/common_addval_t4"
                        android:textColor="@color/common_gray_text"
                        android:textSize="@dimen/common_font_text" />

                    <TextView
                        android:id="@+id/tv_add_val"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/common_black"
                        android:textSize="@dimen/common_font_text"
                        tools:text="增值服务" />

                </LinearLayout>

                <View
                    style="@style/common_style_line"
                    android:layout_marginStart="@dimen/common_padding"
                    android:layout_marginEnd="@dimen/common_padding" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="46dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingStart="@dimen/common_padding"
                    android:paddingEnd="@dimen/common_padding">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingEnd="@dimen/common_padding"
                        android:text="@string/common_range_t4"
                        android:textColor="@color/common_gray_text"
                        android:textSize="@dimen/common_font_text" />

                    <TextView
                        android:id="@+id/tv_range"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/common_black"
                        android:textSize="@dimen/common_font_text"
                        tools:text="服务周期" />

                </LinearLayout>

                <View
                    style="@style/common_style_line"
                    android:layout_marginStart="@dimen/common_padding"
                    android:layout_marginEnd="@dimen/common_padding" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="46dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingStart="@dimen/common_padding"
                    android:paddingEnd="@dimen/common_padding">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingEnd="@dimen/common_padding"
                        android:text="@string/common_service_price_t4"
                        android:textColor="@color/common_gray_text"
                        android:textSize="@dimen/common_font_text" />

                    <TextView
                        android:id="@+id/tv_service_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/common_black"
                        android:textSize="@dimen/common_font_text"
                        tools:text="服务费用" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:background="@color/common_default_background" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="46dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_price"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="3"
                        android:background="@color/common_color_background"
                        android:gravity="center_vertical"
                        android:paddingStart="@dimen/common_padding"
                        android:textColor="@color/common_color_badge"
                        android:textSize="@dimen/common_font_text"
                        tools:text="服务费用:￥100" />

                    <TextView
                        android:id="@+id/tv_submit"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:background="@color/common_colorTheme"
                        android:gravity="center"
                        android:text="立即支付"
                        android:textColor="@color/common_white"
                        android:textSize="@dimen/common_font_text" />
                </LinearLayout>

                <View style="@style/common_style_line" />
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </LinearLayout>
</layout>