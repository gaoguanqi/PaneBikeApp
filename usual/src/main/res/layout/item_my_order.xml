<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="ResourceName">

    <data>

    </data>

    <LinearLayout
        android:id="@+id/item_root"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/common_color_background"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="@dimen/common_padding">

            <TextView
                android:id="@+id/tv_ebike_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="8dp"
                android:gravity="center_vertical"
                android:textColor="@color/common_color_text"
                android:textSize="@dimen/common_font_common"
                app:drawableStartCompat="@drawable/ic_car"
                tools:text="测试文本" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="@dimen/common_padding"
                android:paddingBottom="@dimen/common_padding">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/pic_order" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:paddingStart="8dp">

                    <TextView
                        android:id="@+id/tv_title"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        tools:text="电动车2年版"
                        android:textColor="@color/common_black"
                        android:textSize="@dimen/common_font_common" />

                    <TextView
                        android:id="@+id/tv_price"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        tools:text="总价：￥80"
                        android:textColor="@color/common_gray_text"
                        android:textSize="@dimen/common_font_text" />
                </LinearLayout>
            </LinearLayout>

         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:orientation="horizontal">
             <TextView
                 android:id="@+id/tv_time"
                 android:layout_width="0dp"
                 android:layout_weight="1"
                 android:layout_height="wrap_content"
                 tools:text="服务周期 2020-12-03至2020-12-03"
                 android:textColor="@color/common_gray_text"
                 android:textSize="@dimen/common_font_text" />

             <TextView
                 android:id="@+id/tv_buy_now"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_marginEnd="6dp"
                 android:text="立即付款"
                 android:textColor="@color/common_color_text"
                 android:textSize="@dimen/common_font_common"
                 android:paddingStart="28dp"
                 android:paddingEnd="28dp"
                 android:paddingTop="6dp"
                 android:paddingBottom="6dp"
                 android:background="@drawable/selector_cancel" />
         </LinearLayout>
        </LinearLayout>

        <ImageView
            android:id="@+id/iv_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            tools:background="@drawable/pic_ygm" />
        <TextView
            android:id="@+id/tv_not_pay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="待付费"
            android:visibility="gone"
            android:textColor="@color/common_color_badge"
            android:textSize="@dimen/common_font_text" />
    </LinearLayout>
</layout>