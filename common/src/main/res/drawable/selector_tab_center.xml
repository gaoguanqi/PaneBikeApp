<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android" tools:ignore="ResourceName">
    <item android:state_checked="true">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <stroke android:width="1dp" android:color="@color/common_white" />
                </shape>
            </item>

            <item android:bottom="1dp" android:left="0.5dp" android:right="0.5dp" android:top="1dp">
                <shape android:shape="rectangle">
                    <solid android:color="@color/common_white" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item android:state_pressed="true">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <stroke android:width="1dp" android:color="@color/common_white" />
                </shape>
            </item>

            <item android:bottom="1dp" android:left="0.5dp" android:right="0.5dp" android:top="1dp">
                <shape android:shape="rectangle">
                    <solid android:color="@color/common_white" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item>
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <stroke android:width="1dp" android:color="@color/common_white" />
                </shape>
            </item>
            <item android:bottom="1dp" android:left="0.5dp" android:right="0.5dp" android:top="1dp">
                <shape android:shape="rectangle">
                    <solid android:color="@color/common_colorTheme" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>