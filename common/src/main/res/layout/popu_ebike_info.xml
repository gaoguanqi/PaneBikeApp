<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
    android:layout_gravity="center_horizontal"
    tools:ignore="ResourceName">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginEnd="106dp"
                android:src="@drawable/layer_triangle_up" />

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:background="@drawable/shape_radius"
               android:paddingStart="12dp"
               android:paddingEnd="12dp"
               android:paddingBottom="12dp"
               android:orientation="vertical">
               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:paddingTop="8dp"
                   android:orientation="horizontal">

                   <TextView
                       android:layout_width="0dp"
                       android:layout_weight="1"
                       android:layout_height="wrap_content"
                       android:text="标签号"
                       android:textColor="@color/common_gray_text"
                       android:textSize="@dimen/common_font_text" />

                   <TextView
                       android:id="@+id/tv_label_no"
                       android:layout_width="0dp"
                       android:layout_weight="3"
                       android:layout_height="wrap_content"
                       android:textColor="@color/common_black"
                       android:textSize="@dimen/common_font_text"
                       tools:text="标签号" />
               </LinearLayout>

               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:paddingTop="8dp"
                   android:orientation="horizontal">
                   <TextView
                       android:layout_width="0dp"
                       android:layout_weight="1"
                       android:layout_height="wrap_content"
                       android:textColor="@color/common_gray_text"
                       android:textSize="@dimen/common_font_text"
                       android:text="车主姓名" />

                   <TextView
                       android:id="@+id/tv_name"
                       android:layout_width="0dp"
                       android:layout_weight="3"
                       android:layout_height="wrap_content"
                       android:textColor="@color/common_black"
                       android:textSize="@dimen/common_font_text"
                       tools:text="车主姓名" />
               </LinearLayout>

               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:paddingTop="8dp"
                   android:orientation="horizontal">
                   <TextView
                       android:layout_width="0dp"
                       android:layout_weight="1"
                       android:layout_height="wrap_content"
                       android:textColor="@color/common_gray_text"
                       android:textSize="@dimen/common_font_text"
                       android:text="联系方式" />

                   <TextView
                       android:id="@+id/tv_phone"
                       android:layout_width="0dp"
                       android:layout_weight="3"
                       android:layout_height="wrap_content"
                       android:textColor="@color/common_black"
                       android:textSize="@dimen/common_font_text"
                       tools:text="联系方式" />
               </LinearLayout>

               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:paddingTop="8dp"
                   android:orientation="horizontal">
                   <TextView
                       android:layout_width="0dp"
                       android:layout_weight="1"
                       android:layout_height="wrap_content"
                       android:textColor="@color/common_gray_text"
                       android:textSize="@dimen/common_font_text"
                       android:text="车架号" />

                   <TextView
                       android:id="@+id/tv_frame_no"
                       android:layout_width="0dp"
                       android:layout_weight="3"
                       android:layout_height="wrap_content"
                       android:textColor="@color/common_black"
                       android:textSize="@dimen/common_font_text"
                       tools:text="车架号" />
               </LinearLayout>

               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:paddingTop="8dp"
                   android:orientation="horizontal">
                   <TextView
                       android:layout_width="0dp"
                       android:layout_weight="1"
                       android:layout_height="wrap_content"
                       android:textColor="@color/common_gray_text"
                       android:textSize="@dimen/common_font_text"
                       android:text="品牌型号" />

                   <TextView
                       android:id="@+id/tv_brand"
                       android:layout_width="0dp"
                       android:layout_weight="3"
                       android:layout_height="wrap_content"
                       android:textColor="@color/common_black"
                       android:textSize="@dimen/common_font_text"
                       tools:text="品牌型号" />
               </LinearLayout>

               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:paddingTop="8dp"
                   android:orientation="horizontal">
                   <TextView
                       android:layout_width="0dp"
                       android:layout_weight="1"
                       android:layout_height="wrap_content"
                       android:textColor="@color/common_gray_text"
                       android:textSize="@dimen/common_font_text"
                       android:text="电机号" />

                   <TextView
                       android:id="@+id/tv_motor"
                       android:layout_width="0dp"
                       android:layout_weight="3"
                       android:layout_height="wrap_content"
                       android:textColor="@color/common_black"
                       android:textSize="@dimen/common_font_text"
                       tools:text="电机号" />
               </LinearLayout>

               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:paddingTop="8dp"
                   android:orientation="horizontal">
                   <TextView
                       android:layout_width="0dp"
                       android:layout_weight="1"
                       android:layout_height="wrap_content"
                       android:textColor="@color/common_gray_text"
                       android:textSize="@dimen/common_font_text"
                       android:text="车辆颜色" />

                   <TextView
                       android:id="@+id/tv_color"
                       android:layout_width="0dp"
                       android:layout_weight="3"
                       android:layout_height="wrap_content"
                       android:textColor="@color/common_black"
                       android:textSize="@dimen/common_font_text"
                       tools:text="车辆颜色" />
               </LinearLayout>

               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:paddingTop="8dp"
                   android:orientation="horizontal">
                   <TextView
                       android:layout_width="0dp"
                       android:layout_weight="1"
                       android:layout_height="wrap_content"
                       android:textColor="@color/common_gray_text"
                       android:textSize="@dimen/common_font_text"
                       android:text="车辆类型" />

                   <TextView
                       android:id="@+id/tv_type"
                       android:layout_width="0dp"
                       android:layout_weight="3"
                       android:layout_height="wrap_content"
                       android:textColor="@color/common_black"
                       android:textSize="@dimen/common_font_text"
                       tools:text="车辆类型" />
               </LinearLayout>

               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:paddingTop="8dp"
                   android:orientation="horizontal">
                   <TextView
                       android:layout_width="0dp"
                       android:layout_weight="1"
                       android:layout_height="wrap_content"
                       android:textColor="@color/common_gray_text"
                       android:textSize="@dimen/common_font_text"
                       android:text="车辆照片" />

                   <androidx.recyclerview.widget.RecyclerView
                       android:id="@+id/rv_ebike_img"
                       android:layout_width="0dp"
                       android:layout_weight="3"
                       android:layout_height="wrap_content"/>
               </LinearLayout>

               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:paddingTop="8dp"
                   android:orientation="horizontal">
                   <TextView
                       android:layout_width="0dp"
                       android:layout_weight="1"
                       android:layout_height="wrap_content"
                       android:textColor="@color/common_gray_text"
                       android:textSize="@dimen/common_font_text"
                       android:text="标签照片" />


                   <LinearLayout
                       android:layout_width="0dp"
                       android:layout_weight="3"
                       android:layout_height="90dp"
                       android:orientation="vertical">
                       <ImageView
                           android:id="@+id/iv_locator_pic"
                           android:layout_width="90dp"
                           android:layout_height="90dp"
                           android:background="@drawable/ic_default_placeholder" />
                   </LinearLayout>
               </LinearLayout>
           </LinearLayout>
        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</FrameLayout>