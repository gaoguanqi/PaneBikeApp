<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:background="@color/common_color_background"
    tools:ignore="ResourceName">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingTop="@dimen/common_padding"
            android:paddingStart="@dimen/common_padding"
            android:paddingEnd="@dimen/common_padding">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="42dp"
                android:gravity="center_vertical"
                android:text="上传人员"
                android:textColor="@color/common_gray_text"
                android:textSize="@dimen/common_font_text" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_loader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="42dp"
                android:gravity="center_vertical"
                android:text="服务类别"
                android:textColor="@color/common_gray_text"
                android:textSize="@dimen/common_font_text" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_reset"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/common_color_enable"
                android:gravity="center"
                android:text="重置"
                android:textColor="@color/common_color_text"
                android:textSize="@dimen/common_font_text" />

            <TextView
                android:id="@+id/tv_finish"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/common_color_text"
                android:gravity="center"
                android:text="完成"
                android:textColor="@color/common_white"
                android:textSize="@dimen/common_font_text" />
        </LinearLayout>
    </LinearLayout>
</FrameLayout>