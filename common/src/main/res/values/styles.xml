<resources>
    <!-- Base application theme. -->
    <style name="common_AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/common_colorPrimary</item>
        <item name="colorPrimaryDark">@color/common_colorPrimaryDark</item>
        <item name="colorAccent">@color/common_colorAccent</item>
    </style>



    <style name="common_NoTitleBarTheme" parent="common_AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="common_SplashTheme" parent="common_NoTitleBarTheme">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowBackground">@drawable/layer_splash_bg</item>
    </style>

    <style name="common_FullscreenTheme" parent="common_NoTitleBarTheme">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="common_style_toolbar">
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/common_colorTheme</item>
    </style>

    <style name="common_style_line">
        <item name="android:layout_height">@dimen/common_line</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/common_color_line</item>
    </style>

    <style name="common_style_menu_active">
        <item name="android:textSize">12sp</item>
    </style>
    <style name="common_style_menu_inactive">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="common_style_tablayout_text" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="common_style_tabvideo_text" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">14sp</item>
    </style>


    <style name="common_style_title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/common_color_title</item>
        <item name="android:textSize">@dimen/common_font_title</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="common_style_title_txt">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/common_color_title</item>
        <item name="android:textSize">@dimen/common_font_title_side</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="common_DialogCommon" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/common_trans</item>
    </style>

    <style name="common_DialogBottom" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowAnimationStyle">@style/common_StyleBottom</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/common_trans</item>
    </style>

    <style name="common_StyleBottom" parent="android:Animation" mce_bogus="1" >
        <item name="android:windowEnterAnimation">@anim/anim_dialog_up</item>
        <item name="android:windowExitAnimation">@anim/anim_dialog_down</item>
    </style>


    <style name="common_style_account">
        <item name="android:layout_height">42dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="common_style_account_icon">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="common_style_account_text">
        <item name="android:layout_height">38dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginStart">4dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/common_colorTheme</item>
        <item name="android:textSize">@dimen/common_font_common</item>
    </style>

    <style name="common_style_account_input">
        <item name="android:layout_height">38dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginStart">4dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:textSize">@dimen/common_font_common</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
    </style>


    <style name="common_style_forget_pwd">
        <item name="android:layout_height">46dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingStart">20dp</item>
        <item name="android:paddingEnd">20dp</item>

    </style>

    <style name="common_anim_activity_right2left" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/slide_right_in</item>
        <item name="android:activityOpenExitAnimation">@anim/slide_left_out</item>
        <item name="android:activityCloseExitAnimation">@anim/slide_right_out</item>
        <item name="android:activityCloseEnterAnimation">@anim/slide_left_in</item>
    </style>


    <style name="common_anim_Right2LeftTheme" parent="common_NoTitleBarTheme">
        <item name="android:windowAnimationStyle">@style/common_anim_activity_right2left</item>
    </style>


    <style name="common_style_mine_item">
        <item name="android:layout_height">52dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:background">@drawable/selector_item_white</item>
        <item name="android:paddingStart">@dimen/common_padding</item>
    </style>
</resources>